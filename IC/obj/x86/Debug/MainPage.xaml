<Page
    x:Class="IC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    >

    <Grid x:ConnectionId='2' Background="Transparent" x:Name="AppTitleBar" BorderThickness="1" Height="Auto">
        <Grid Grid.Row="1">
            <StackPanel>
                <ListView ItemsSource="{Binding MyItems}" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ListViewItem Height="62" Width="Auto">
                                <Grid Padding="10">
                                    <PersonPicture ProfilePicture="{Binding}" Height="40px" Width="40px" />
                                </Grid>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid>
                    <!-- <AppBarButton Icon="StatusCircleErrorX"/>
                    <AppBarButton Icon="GripperDotsVertical"/>-->
                    <StackPanel>
                        <AppBarButton x:ConnectionId='3' Icon="More"                             CanDrag="True" />
                        <AppBarButton x:ConnectionId='4' x:Name="DragButton" Icon="GlobalNavigationButton"/>

                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

