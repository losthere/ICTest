            <StackPanel>
                <PersonPicture x:ConnectionId='3'                                              ProfilePicture="ms-appx:///Assets/Person2.png" Height="40" Width="40" />
                <PersonPicture x:ConnectionId='4'                                              ProfilePicture="ms-appx:///Assets/Person3.png" Height="40" Width="40" />
                <PersonPicture x:ConnectionId='5'                                              ProfilePicture="ms-appx:///Assets/Person4.png" Height="40" Width="40" />
                <PersonPicture x:ConnectionId='6'                                              ProfilePicture="ms-appx:///Assets/Person5.png" Height="40" Width="40" />
                <Grid>
                   
                    <!-- <AppBarButton Icon="StatusCircleErrorX"/>
                    <AppBarButton Icon="GripperDotsVertical"/>-->
                    <StackPanel>
                        <AppBarButton x:ConnectionId='7' x:Name="DragButton" Icon="GlobalNavigationButton" CanDrag="True"  HorizontalAlignment="Left" Margin="10"                                                                                                                               />
                        <AppBarButton x:ConnectionId='8' Icon="More"                             CanDrag="True" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
